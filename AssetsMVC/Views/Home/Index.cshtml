@section scripts{
    <script>
        function blinker() {
            $('strong').fadeOut(100);
            $('strong').fadeIn(100);
        }
        setInterval(blinker, 1000);

    </script>
    <script src="/CustomScripts/jquery.canvasjs.min.js" type="text/javascript"></script>
    <script type="text/javascript">

    $(function () {
        $.ajax({
            type: "GET",
            url: '@Url.Action("HighChartAjaxMethod", "Home")',
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            async: true,
            processData: false,
            cache: false,
            delay: 15,
            success: function (data) {
                var series = new Array();
                //for (var i in data) {
                //    var serie = new Array('{label:'+'"'+data[i].label+'"', 'y:'+data[i].Y+'}');
                //    series.push(serie);
                //}
                var dataPoints = [];
                for (var i = 0; i < data.length; i++) {
                    dataPoints.push({ label: data[i].label, y: data[i].Y });
                }
                DrawPieChart(dataPoints);
            },
            error: function (xhr) {
                alert('error');
                alert(xhr.responseText);
            }
        });
    });
    DrawPieChart = function (dataPoints) {
        var chart = new CanvasJS.Chart("Container", {
            title: {
                text: "Accessory Distribution - Data Representation"
            },
            data: [
            {
                // Change type to "doughnut", "line", "splineArea", etc.
                type: "column",
                dataPoints: dataPoints
            }
            ]
        });
        chart.render();
    }

    </script>
}
