    <script type="text/javascript">
    
        $(document).ready(function () {
            $(".chosen-select").chosen({ no_results_text: "Oops, nothing found!" });
                $("#make_id").on("change", function () {

                    $.ajax(
                    {
                        url: '@Url.Action("GetModel", "Mouse")',
                        type: 'POST',
                        data: "{'make':'" + $(this).val() + "'}",
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {
                            var markup = "<option value='0'>Choose Mouse Model</option>";
                            var li_markup = '<li class="active-result" data-option-array-index=0>--- Select Model ----</li>';
                            for (var x = 0; x < data.length; x++) {
                                markup += "<option value=" + data[x].Value + ">" + data[x].Text + "</option>";
                                li_markup += '<li class="active-result" data-option-array-index=' + x+1 + '>' + data[x].Text + '</li>';
                            }
                   
                            $("#model_id").html(markup);
                            $("#model_id").trigger('chosen:updated');
                        },
                        error: function (response) {
                            alert("error");
                            alert(response.responseText);
                        },
                        failure: function () {
                            alert("failed");
                        }
                    });
                });


